---
import logo from "../assets/imgs/logo.png";
import TextLink from "./TextLink.astro";
import { Icon } from "astro-icon";
---

<nav class="nav-header">
  <a href="/">
    <img src={logo.src} width="60px" alt="Logo" />
  </a>
  <div class="flex gap-x-5">
    <TextLink text="home" url="/" />
    <TextLink text="projects" url="/projects" />
    <TextLink text="blog" url="/blog" />
    <a href="/search">
      <Icon name="mdi:search" class="text-grey-light w-6" />
    </a>
  </div>
</nav>

<style>
  .nav-header {
    @apply bg-black border;
    @apply border-black-light;
    @apply border-solid;
    @apply flex;
    @apply justify-between;
    @apply items-center;
    @apply p-4;
    @apply md:text-lg;
    @apply md:px-8;
    @apply md:py-5;
  }
</style>
