---
import "@fontsource/catamaran/600.css";
import "@fontsource/catamaran/500.css";
import "@fontsource/catamaran/400.css";
import "@fontsource/catamaran/300.css";
import "@fontsource/catamaran/200.css";
import "@fontsource/catamaran/100.css";
import "@fontsource/lora/500.css";
import "@fontsource/lora/400.css";
import "@fontsource/overpass/500.css";
import "@fontsource/overpass/400.css";
import "@fontsource/overpass/300.css";
import "@fontsource/overpass";
import "@fontsource/pt-mono/400.css";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1a1a1a" />
    <meta name="msapplication-TileColor" content="#1a1a1a" />
    <meta name="theme-color" content="#1a1a1a" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black-dark bg-dot bg-repeat bg-1rem text-grey flex-1">
    <Header />
    <slot />
  </body>
</html>
